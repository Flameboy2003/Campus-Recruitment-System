<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".Fragments.Student.StudentAboutFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textViewTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="About Campus Recruitment System"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textViewDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="Welcome to Campus Recruitment System! We're dedicated to simplifying the job search process for students and recruiters alike."
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textViewMission"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="Our Mission"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textViewMissionDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="We aim to bridge the gap between students and recruiters, providing a seamless platform for job hunting and hiring."
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textViewOffer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="What We Offer"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textViewOfferDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="For students: Easy profile creation, resume upload, and job application features.\n\nFor recruiters: Powerful search tools and candidate management capabilities."
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textViewWhyChooseUs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="Why Choose Us"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textViewWhyChooseUsDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="• Innovative technology\n• User-friendly design\n• Dedicated support"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textViewGetInTouch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="Get In Touch"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textViewGetInTouchDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="Join us in revolutionizing campus recruitment! Contact us today to learn more."
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textViewThankYou"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thank you for choosing Campus Recruitment System!"
            android:textSize="16sp" />

    </LinearLayout>
</ScrollView>

